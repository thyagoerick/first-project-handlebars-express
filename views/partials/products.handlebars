<div class="product">
    <a class="linkProduct" href="/product/{{this.id}}">
        <span>
            {{#if this.img}}
                <img src={{this.img}} alt="Imagem XPTO">
            {{else}}
                <div class="noneImage"></div>
            {{/if}}
            <div class="info">
                <p>Produto: {{this.name}}</p>
                <p>Catergoria: {{this.category}}</p>
                <span>
                    <p>QTD: {{this.qty}}</p>
                    <p>{{this.un}}</p>    
                </span>
            </div>
            <small>#{{this.id}}</small>
        </span>
    </a>    
</div>